<Window x:Class="Milestone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="420">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="8"/>
                    <Setter Property="Width" Value="60"/>
                </Style>
            </StackPanel.Resources>
            <Button Name="network1" Content="Network 1" Click="network1_Click" Width="70" Height="25"/>
            <Button Name="network2" Content="Network 2" Click="network2_Click" Width="70" Height="25"/>
            <Button Name="network3" Content="Network 3" Click="network3_Click" Width="70" Height="25"/>
            <Label Name="statusLabel" Width="130" Height="25" IsEnabled="False" FontSize="12"/>
        </StackPanel>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="5">
            <TextBox Name="nodeText" TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>
